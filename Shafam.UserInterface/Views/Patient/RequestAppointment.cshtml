@using Shafam.UserInterface.Models
@using Shafam.Common.DataModel
@model Shafam.UserInterface.Models.AppointmentRequestViewModel

@{
    ViewBag.Title = "RequestAppointment";
}

<section id="appointmentForm">
    @using (Html.BeginForm("RequestAppointment", "Patient", new { patientId = @Model.Patient.PatientId }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Patient.PatientId, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Patient.PatientId, new { @class = "form-control", @placeholder = "Patient's ID" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Reason, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Reason, new { @class = "form-control", @placeholder = "Reason" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Request" class="btn btn-primary" />
            </div>
        </div>

    }
</section>

