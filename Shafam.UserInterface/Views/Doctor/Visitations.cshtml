@using Shafam.Common.DataModel
@{
    ViewBag.Title = "Visitations";
}

@model Shafam.UserInterface.Models.VisitationViewModel

@Html.Partial("_Header", @Model.Patient)

<p>@Html.ActionLink("Add Visitation", "AddVisitation", new { patientId = @Model.Patient.PatientId }) </p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Visitation ID</th>
            <th>Date &amp; Time</th>
            <th>Doctor Name</th>
            <th>Reason</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Visitations.ToList().Count; i++)
        {
            <tr onclick="window.location.href='@Url.Action("VisitationDetails", new { patientid = @Model.Patient.PatientId, visitationId = Model.Visitations.ToArray()[i].VisitationId })'">
                <td>@Model.Visitations.ToArray()[i].VisitationId</td>   @*<td>@visitation.VisitationId</td>*@
                <td>@Model.Visitations.ToArray()[i].DateTime</td>       @*<td>@visitation.DateTime</td>*@
                <td>@Model.DoctorList.ToArray()[i].FirstName @Model.DoctorList.ToArray()[i].LastName </td>   @*<td>@visitation.DoctorId</td>*@
                <td>@Model.Visitations.ToArray()[i].Reason</td>   @*<td>@visitation.Reason</td>*@
                <td>@Model.Visitations.ToArray()[i].Notes</td>   @*<td>@visitation.Notes</td>*@
            </tr>
        }
    </tbody>
</table>

