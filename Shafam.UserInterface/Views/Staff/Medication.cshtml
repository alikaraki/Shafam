@using Shafam.Common.DataModel
@using Shafam.UserInterface.Models
@{
    ViewBag.Title = "Medication";
}
@model MedicationViewModel

@Html.Partial("_Header", @Model.Patient)

<table class="table table-hover">
    <thead>
        <tr>
            <th>Date &amp; Time</th>
            <th>Reason</th>
            <th>Medication Name</th>
            <th>Medication Quantity</th>
            <th>Medication Instructions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (SingleMedicationModel medication in Model.Medications)
        {
            <tr onclick="window.location.href='@Url.Action("VisitationDetails", new { patientid = @Model.Patient.PatientId, visitationId = medication.VisitationId })'">
                <td>@medication.DateTime</td>
                <td>@medication.Reason</td>
                <td>@medication.Medication.Name</td>
                <td>@medication.Medication.Quantity</td>
                <td>@medication.Medication.Instructions</td>
            </tr>
        }
    </tbody>
</table>
