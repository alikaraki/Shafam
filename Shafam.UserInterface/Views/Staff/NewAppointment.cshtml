@model Shafam.UserInterface.Models.AppointmentInputViewModel

@{
    ViewBag.Title = "NewAppointment";
}

<section id="appointmentForm">
    @using (Html.BeginForm("NewAppointment", "Staff", new { doctorId = @Model.Doctor.DoctorId }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.PatientID, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.PatientID, new { @class = "form-control", @placeholder = "Patient's ID" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Reason, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Reason, new { @class = "form-control", @placeholder = "Reason" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.DateTime, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.DateTime, new { @class = "form-control", @placeholder = "Appointment Date and Time" })
            </div>
        </div>

        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </div>

    }
</section>

