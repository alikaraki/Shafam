@model Shafam.UserInterface.Models.PatientInputModel

@{
    ViewBag.Title = "Add Patient";
}

<h2>@ViewBag.Title</h2>
<hr />

<section id="patientForm">
    @using (Html.BeginForm("AddPatient", "Staff", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.FirstName, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "Firstname" })
                @Html.ValidationMessageFor(m => m.FirstName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.LastName, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "Lastname" })
                @Html.ValidationMessageFor(m => m.LastName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Age, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Age, new { @class = "form-control", @placeholder = "Age" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", @placeholder = "999-999-9999" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Address, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @placeholder = "123 Street Name, City, PR, L9L9L9, Country" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.HealthCardNumber, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.HealthCardNumber, new { @class = "form-control", @placeholder = "9999-999-999-XX" })
                @Html.ValidationMessageFor(m => m.HealthCardNumber)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.GenderSelected, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <label class="col-sm-2">
                    @Html.RadioButtonFor(m => m.GenderSelected, "Male") Male
                </label>
                <label class="col-sm-2">
                    @Html.RadioButtonFor(m => m.GenderSelected, "Female") Female
                </label>
            </div>
        </div>
    
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    }
</section>