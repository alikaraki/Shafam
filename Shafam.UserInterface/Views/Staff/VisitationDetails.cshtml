@using Shafam.Common.DataModel
@{
    ViewBag.Title = "VisitationDetails";
}

@model Shafam.UserInterface.Models.VisitationDetailModel

@Html.Partial("_Header", @Model.Patient)

<h2>Visitation Details</h2>

<form class="form-horizontal" role="form">
    <div class="form-group">
        <label class="col-sm-2 control-label">Visitation ID</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.Visitation.VisitationId</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Date &amp; Time</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.Visitation.DateTime</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Reason</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.Visitation.Reason</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Notes</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.Visitation.Notes</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Medication Prescribed</label>
        <div class="col-sm-10">
            @if (@Model.Medication != null)
            {<p class="form-control-static">@Model.Medication.Name</p>}
            else
            {<p class="form-control-static">N/A</p>}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Medication Quantity</label>
        <div class="col-sm-10">
            @if (@Model.Medication != null)
            {<p class="form-control-static">@Model.Medication.Quantity</p>}
            else
            {<p class="form-control-static">N/A</p>}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Medication Instructions</label>
        <div class="col-sm-10">
            @if (@Model.Medication != null)
            {<p class="form-control-static">@Model.Medication.Instructions</p>}
            else
            {<p class="form-control-static">N/A</p>}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Treatment Prescribed</label>
        <div class="col-sm-10">
            @if (@Model.Treatment != null)
            {<p class="form-control-static">@Model.Treatment.TreatmentType</p>}
            else
            {<p class="form-control-static">N/A</p>}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Treatment Completed</label>
        <div class="col-sm-10">
            @if (@Model.Treatment != null)
            {
                if (@Model.Treatment.TreatmentCompleted == false)
                {<p class="form-control-static">Not Completed</p>}
                else
                {<p class="form-control-static">Completed</p>}
            }
            else
            {
                <p class="form-control-static">N/A</p>
            }
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Test Prescribed</label>
        <div class="col-sm-10">
            @if (@Model.Test != null)
            {<p class="form-control-static">@Model.Test.Type</p>}
            else
            {<p class="form-control-static">N/A</p>}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Test Results</label>
        <div class="col-sm-10">
            @if (@Model.Test != null)
            {<p class="form-control-static">@Model.Test.Result</p>}
            else
            {<p class="form-control-static">N/A</p>}
        </div>
    </div>
</form>
