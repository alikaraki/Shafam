@using Shafam.Common.DataModel

@{
    ViewBag.Title = "Doctor Schedule";
}

@{
    var doctorId = Request.QueryString["doctorId"];
}
<div class="row">
    <div class="col-md-10">
        <h3>Schedule</h3>
    </div>
    <div class="col-md-2">
        <br />
        <p class="pull-right">@Html.ActionLink("Add Appointment", "NewAppointment", new { doctorId = doctorId })</p>
    </div>
</div>

<p> @doctorId
</p>

<table class="table">
    <tr>
        <th>Patient ID</th>
        <th>Date Time</th>
    </tr>
    @foreach (Appointment appointment in Model)
    {
        <tr>
            <td>@appointment.PatientId</td>
            <td>@appointment.DateTime</td>
        </tr>
    }
</table>