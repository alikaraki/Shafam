@model Shafam.UserInterface.Models.TimePeriodInputViewModel

@{
    ViewBag.Title = "TimeBill";
}

<section id="timeBillForm">
    @using (Html.BeginForm("TimeBill", "Finance", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Begin, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Begin, new { @class = "form-control", @placeholder = "Start Date" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.End, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.End, new { @class = "form-control", @placeholder = "End Date" })
            </div>
        </div>

        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="View Bill" class="btn btn-primary" />
            </div>
        </div>

    }
</section>

