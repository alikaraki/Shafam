@{
    ViewBag.Title = "Doctor Bill";
}

@model Shafam.UserInterface.Models.DoctorBillViewModel

<div class="row">
    <div class="col-md-10">
        <h3>Doctor @Model.Doctor.FirstName @Model.Doctor.LastName </h3>
    </div>
    <div class="col-md-2">
        <br />
        <p class="pull-right">@Html.ActionLink("< Back to Doctors List", "Doctors")</p>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Rate</th>
            <th>Visitations</th>
            <th>Cost</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th></th>
            <th>$100.00</th>
            <th>@Model.NumberOfVisitations</th>
            <th>@Model.VisitationCost</th>
        </tr>
    </tbody>
</table>


<table class="table">
    <thead>
        <tr>
            <th>Treatment Type</th>
            <th>Rate</th>
            <th>Count</th>
            <th>Cost</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TreatmentDict)
        {
            <tr> 
                <td>@item.Key</td>
                <td>$@item.Value.Item1</td>
                <td>@item.Value.Item2</td>
                <td>$@item.Value.Item3</td>
            </tr>
        }
    </tbody>
</table>



<table class="table">
    <thead>
        <tr>
            <th>Test Type</th>
            <th>Count</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TestDict)
        {
            <tr>
                <td>@item.Key</td>
                <td>@item.Value</td>
            </tr>
        }
    </tbody>
</table>



<table class="table">
    <thead>
        <tr>
            <th>Medication Type</th>
            <th>Count</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.MedicationDict)
        {
            <tr>
                <td>@item.Key</td>
                <td>@item.Value</td>
            </tr>
        }
    </tbody>
</table>

<hr />

<form class="form-horizontal" role="form">
    <div class="form-group">
        <label class="col-sm-2 control-label">BILL AMOUNT</label>
        <div class="col-sm-10">
            <p class="form-control-static">$@Model.BillAmount</p>
        </div>
    </div>
</form>