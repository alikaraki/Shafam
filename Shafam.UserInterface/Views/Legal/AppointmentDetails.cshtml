@using Shafam.Common.DataModel
@model Shafam.Common.DataModel.Appointment

@{
    ViewBag.Title = "AppointmentDetails";
}

<div class="row">
    <div class="col-md-10">
        <h3>Appointment Details</h3>
    </div>
    <div class="col-md-2">
        <br />

        <p class="pull-right">@Html.ActionLink("Cancel Appointment", "CancelAppointment", new { appointmentId = @Model.AppointmentId })</p>

    </div>
</div>


<form class="form-horizontal" role="form">
    <div class="form-group">
        <label class="col-sm-2 control-label">Doctor ID</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.DoctorId</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Patient ID</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.PatientId</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Date and Time</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.DateTime</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Reason</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.Reason</p>
        </div>
    </div>
</form>