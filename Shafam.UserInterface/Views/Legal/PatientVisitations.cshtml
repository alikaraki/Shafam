@using Shafam.Common.DataModel
@{
    ViewBag.Title = "PatientVisitations";
}

@model Shafam.UserInterface.Models.VisitationViewModel

@Html.Partial("_DoctorProfileHeader", @Model.Doctor)
@*@Html.Partial("_Header", @Model.Patient)*@

<table class="table table-hover">
    <thead>
        <tr>
            <th>Visitation ID</th>
            <th>Doctor Name</th>
            <th>Date &amp; Time</th>
            <th>Medications</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Visitations.ToList().Count; i++)
        {
            <tr>
                <td>@Model.Visitations.ToArray()[i].VisitationId</td>
                <td>@Model.Doctor.FirstName @Model.Doctor.LastName</td>
                <td>@Model.Visitations.ToArray()[i].DateTime</td>
                <td>@Model.Visitations.ToArray()[i].Medications</td>
            </tr>
        }
    </tbody>
</table>