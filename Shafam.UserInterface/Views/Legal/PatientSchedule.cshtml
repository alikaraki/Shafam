@using Shafam.Common.DataModel
@using Shafam.UserInterface.Models
@model Shafam.UserInterface.Models.PatientScheduleViewModel

@{
    ViewBag.Title = "Patient Schedule";
}

@Html.Partial("_Header", @Model.Patient)

<table class="table">
    <thead>
        <tr>
            <th>Doctor ID</th>
            <th>Doctor Name</th>
            <th>Date Time</th>
            <th>Reason</th>
        </tr>
    </thead>
    <tbody>
        @foreach (SingleAppointmentViewModel singleAppointment in Model.SingleAppointmentViewModels)
        {
            <tr>
                <td>@singleAppointment.SDoctor.DoctorId</td>
                <td>Dr. @singleAppointment.SDoctor.FirstName @singleAppointment.SDoctor.LastName</td>
                <td>@singleAppointment.SAppointment.DateTime</td>
                <td>@singleAppointment.SAppointment.Reason</td>
            </tr>
        }
    </tbody>
</table>