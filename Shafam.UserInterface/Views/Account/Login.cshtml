@model Shafam.UserInterface.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
}

<h2>@ViewBag.Title.</h2>
<hr />
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.ValidationSummary(true)
                <div class="form-group">
                    @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UserName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Log in" class="btn btn-default" />
                    </div>
                </div>
            }
        </section>
    </div>
    <div class="col-md-4">
        <p>Login with a  Test Account:</p>
        <div class="list-group">
            @Html.ActionLink("Doctor John", "LoginAsDoctorJohn", null, new { @class = "list-group-item" })
            @Html.ActionLink("Doctor Amy", "LoginAsDoctorAmy", null, new { @class = "list-group-item" })
            @Html.ActionLink("Staff Michael", "LoginAsStaffMichael", null, new { @class = "list-group-item" })
            @Html.ActionLink("Staff Sara", "LoginAsStaffSara", null, new { @class = "list-group-item" })
            @Html.ActionLink("Legal", "LoginAsLegal", null, new { @class = "list-group-item" })
            @Html.ActionLink("Finance", "LoginAsFinance", null, new { @class = "list-group-item" })
            @Html.ActionLink("IT Dept", "LoginAsIT", null, new { @class = "list-group-item" })

        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}